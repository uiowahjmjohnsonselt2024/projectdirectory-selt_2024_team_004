<div class="login-container">
  <h1>Log In to Pretty Pirates</h1>

  <%= stylesheet_link_tag 'login', media: 'all', 'data-turbo-track': 'reload' %>

  <%= render 'shared/flash' %>

<%= stylesheet_link_tag 'login', media: 'all', 'data-turbo-track': 'reload' %>
  <%= form_with url: login_path, local: true do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div class="forgot-password-link">
      <%= link_to 'Forgot Password?', recovery_path, class: 'forgot-password' %>
    </div>
    <%= form.submit "Log In", class: "btn-login" %>
  <% end %>

  <div class="signup-container">
    <p>Don't have an account?</p>
    <%= link_to 'Sign Up', signup_path, class: 'btn-signup' %>
  </div>
</div>
