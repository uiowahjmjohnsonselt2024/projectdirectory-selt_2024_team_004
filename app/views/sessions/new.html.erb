<h1>Log In</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email%>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <%= form.submit "Log In" %>
<% end %>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<p>Don't have an account?</p>
<%= link_to 'Sign Up', signup_path, class: 'btn btn-primary' %>