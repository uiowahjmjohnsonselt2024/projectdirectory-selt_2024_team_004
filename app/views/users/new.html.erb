<div class="form-container">
  <%= stylesheet_link_tag 'signup', media: 'all', 'data-turbo-track': 'reload' %>

  <h1>Sign Up for Sea Raiders</h1>

  <%= render 'shared/flash' %>
  
  <%= form_with url: signup_path, model: @user, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, "Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :password, "Password", class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, "Password confirmation", class: "form-label" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  <% end %>

  <p>Already have an account?</p>
  <%= link_to 'Log In', login_path, class: 'btn btn-secondary' %>
</div>
