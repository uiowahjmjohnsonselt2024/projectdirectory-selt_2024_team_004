<div class="container">
  <div class="top-banner">
    <h2 class="title">Pretty Pirates</h2>

    <div class="dropdown-menu-container">
      <button class="dropdown-button">Menu</button>
      <div class="dropdown-content">
        <a href="#">Settings</a>
        <a href="#">Store</a>
        <%= link_to 'Exit World', worlds_path, class:'btn btn-primary dropdown_link' %>
      </div>
    </div>
  </div>

  <div class="grid">
    <% (1..36).each do |i| %>
      <div class="grid-item"
           data-x="<%= (i % 6) %>"
           data-y="<%= (i / 6).floor %>">
           Tile <%= i %>
      </div>
    <% end %>
    <div class="character"
         style="position: absolute; top: <%= @character.y_coord * 2 %>px; left: <%= @character.x_coord * 2 %>px;">
      <%= image_tag asset_path(@character.image_code), width: '100', height: '100' %>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const character = document.querySelector('.character'); // Select the character element
        let xCoord = <%= @character.x_coord %>; // Initial X coordinate
        let yCoord = <%= @character.y_coord %>; // Initial Y coordinate

        const moveDistance = 10; // Set how much the character moves per keypress (in pixels)

        // Update the character's position based on the arrow key pressed
        function moveCharacter() {
            character.style.left = (xCoord * 2) + 'px';
            character.style.top = (yCoord * 2) + 'px';
        }

        // Listen for keydown events
        document.addEventListener('keydown', function (e) {
            if (e.key === 'ArrowUp') {
                yCoord -= 48; // Move up
            } else if (e.key === 'ArrowDown') {
                yCoord += 48; // Move down
            } else if (e.key === 'ArrowLeft') {
                xCoord -= 107; // Move left
            } else if (e.key === 'ArrowRight') {
                xCoord += 107; // Move right
            }

            //xCoord = Math.max(0, Math.min(5, xCoord)); // Limit x to the grid's width (0-5)
            //yCoord = Math.max(0, Math.min(5, yCoord)); // Limit y to the grid's height (0-5)

            moveCharacter();
        });

        // Initial position of the character
        moveCharacter();
    });
</script>
