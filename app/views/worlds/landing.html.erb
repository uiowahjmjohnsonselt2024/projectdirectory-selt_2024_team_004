<div class="container">
  <div class="top-banner">
    <h2 class="title">Pretty Pirates</h2>

    <%= stylesheet_link_tag 'landing', media: 'all', 'data-turbo-track': 'reload', defer: true %>
    <%= javascript_include_tag 'landing', 'data-turbo-track': 'reload', defer: true %>

    <div class="dropdown-menu-container">
      <button class="dropdown-button">Menu</button>
      <div class="dropdown-content">
        <%= link_to 'Settings', settings_path, class:'btn btn-primary dropdown_link' %>
        <a href="#" id="store-link">Store</a>
        <%= link_to 'Exit World', worlds_path, class:'btn btn-primary dropdown_link' %>
      </div>
    </div>
  </div>

  <div class="grid">
    <% (1..36).each do |i| %>
      <div class="grid-item">Tile <%= i %></div>
    <% end %>
  </div>

    <div id="purchase-modal" class="modal">
      <div class="modal-content">
        <div class="store-banner">
          <h2 class="store-title">Purchase Item</h2>
        </div>
        <span class="close-button">&times;</span>
        <div class="purchase-form">
          <h3 id="item-name"></h3>
          <p id="item-price"></p>
          <form id="purchase-form">
            <label for="card-number">Card Number:</label>
            <input type="text" id="card-number" name="card-number" placeholder="XXXX XXXX XXXX XXXX" required>

            <label for="expiration-date">Expiration Date:</label>
            <input type="text" id="expiration-date" name="expiration-date" placeholder="MM/YY" required>

            <label for="cvv">CVV:</label>
            <input type="text" id="cvv" name="cvv" placeholder="XXX" required>

            <button type="submit" class="btn">Purchase</button>
          </form>
        </div>
      </div>
    </div>

    <div id="store-modal" class="modal">
      <div class="modal-content">
        <div class="store-banner">
          <h2 class="store-title">Store</h2>
        </div>
        <span class="close-button">&times;</span>
        <div class="store-grid">
          <div class="store-grid-item">
            <button class="item-button" data-name="Sea Shard (1)" data-price="$0.75 USD">
              <div class="item-content">
                <%= image_tag "shards/DALLE/shard.png", alt: "Item 1", style: "width: 100%; height: auto; object-fit: cover; border-radius: 8px;" %>
                <p class="item-price">Sea Shard (1): <br>$0.75 USD</p>
              </div>
            </button>
          </div>
          <div class="store-grid-item">
            <button class="item-button" data-name="Pile o' Shards (10)" data-price="$7.00 USD">
              <div class="item-content">
                <%= image_tag "shards/pile.png", alt: "Item 2", style: "width: 100%; height: auto; object-fit: cover; border-radius: 8px;" %>
                <p class="item-price">Pile o' Shards (10): <br>$7.00 USD</p>
              </div>
            </button>
          </div>
          <div class="store-grid-item">
            <button class="item-button" data-name="Hat o' Shards! (50)" data-price="$30.00 USD">
              <div class="item-content">
                <%= image_tag "shards/hat.png", alt: "Item 3", style: "width: 100%; height: auto; object-fit: cover; border-radius: 8px;" %>
                <p class="item-price">Hat o' Shards! (50): <br>$30.00 USD<br>20% Off!</p>
              </div>
            </button>
          </div>
          <div class="store-grid-item">
            <button class="item-button" data-name="Chest o' Shards! (100)" data-price="$50.00 USD">
              <div class="item-content">
                <%= image_tag "shards/treasure_chest.png", alt: "Item 4", style: "width: 100%; height: auto; object-fit: cover; border-radius: 8px;" %>
                <p class="item-price">Chest o' Shards! (100): <br>$50.00 USD<br>33% Off!</p>
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
</div>